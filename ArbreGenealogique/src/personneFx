import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.layout.Pane;
import javafx.scene.shape.Line;
import javafx.scene.text.Text;
import javafx.stage.Stage;

public class FamilyTreeVisualizer extends Application {
    @Override
    public void start(Stage primaryStage) {
        Pane root = new Pane();

        // Créer les personnes
        Person john = new Personne("John");
        Person jane = new Personne("Jane");
        Person robert = new Personne("Robert");
        Person emily = new Personne("Emily");
        robert.setParents(john, jane);
        emily.setParents(john, jane);

        // Ajouter les éléments graphiques
        Text johnText = new Text(50, 50, john.getName());
        Text janeText = new Text(150, 50, jane.getName());
        Text robertText = new Text(100, 150, robert.getName());
        Text emilyText = new Text(200, 150, emily.getName());

        Line robertToJohn = new Line(100, 150, 50, 50);
        Line robertToJane = new Line(100, 150, 150, 50);
        Line emilyToJohn = new Line(200, 150, 50, 50);
        Line emilyToJane = new Line(200, 150, 150, 50);

        root.getChildren().addAll(johnText, janeText, robertText, emilyText, robertToJohn, robertToJane, emilyToJohn, emilyToJane);

        Scene scene = new Scene(root, 300, 300);
        primaryStage.setScene(scene);
        primaryStage.setTitle("Family Tree Visualizer");
        primaryStage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
